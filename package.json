{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "webpack -p --dest target/${npm_package_name}",
    "build:css": "lessc src/main/less/style.less target/${npm_package_name}/css/style.css",
    "watch:js": "webpack -d --watch --dest target/${npm_package_name}",
    "watch:css": "onchange 'src/main/less/**' -- lessc --source-map-map-inline src/main/less/style.less target/${npm_package_name}/css/style.css"
  },
  "devDependencies": {
    "yargs": "3.24.0",
    "webpack": "1.12.1",
    "babel-loader": "5.3.2",
    "typescript": "~1.6.2",
    "ts-loader": "~0.7.1",
    "handlebars": "~4.0.2",
    "handlebars-loader": "~1.1.4",
    "jasmine-core": "~2.3.4",
    "karma": "~0.13.9",
    "karma-webpack": "~1.7.0",
    "karma-jasmine": "~0.3.6",
    "karma-chrome-launcher": "~0.2.0",
    "karma-phantomjs-launcher": "~0.2.1",
    "phantomjs": "~1.9.18",
    "less": "~2.5.3",
    "onchange": "~2.0.0"
  }
}
